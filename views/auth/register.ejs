<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="css/plugins/select2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <link rel="stylesheet" href="css/style.css">
</head>

<body>


    <div class="container">
        <div class="login-form sign-up">
            <div class="form-head border-bottom pb-4 mb-4">
                <span>ثبت نام</span> <i class="fas fa-sign-in-alt"></i>
            </div>

            <div class="main-tabs">
                <div class="tabs-btns">
                    <ul>
                        <li><a href="#" class="active" data-for-tab="1">ادمین ارشد</a></li>
                        <li><a href="#" data-for-tab="2">ادمین زیرمجموعه</a></li>

                    </ul>
                </div>
                <div class="main-tab-content active" data-tab="1">
                    <div class="alertss_senior"></div>
                    <form method="POST" action="/register/senior" id="senior_form">
                        <div class="form-inps">
                            <i class="fas fa-user-alt"></i>
                            <input type="text" placeholder="نام  خود را وارد کنید" name="name" id="sen_name">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-user-alt"></i>
                            <input type="text" placeholder="نام خانوادگی خود را وارد کنید" name="familyname"
                                id="sen_fname">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-users"></i>
                            <input type="text" placeholder="گروه خود را وارد کنید" name="group_name" id="sen_gname">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-users"></i>
                            <input type="text" placeholder="تگ خود را وارد کنید" name="tag_name" id="sen_tagn">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-user-alt"></i>

                            <input type="text" placeholder="نام کاربری خود را وارد کنید" name="username"
                                id="sen_username">
                            <div class="show-err-admin">این اسم به ادمین ها نشان داده میشود برای انتخاب ارشد</div>
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="پسورد خود را وارد کنید" name="password"
                                id="sen_password">
                        </div>
                        <button type="submit" id="reds" class="login-btn">ثبت نام</button>
                    </form>

                </div>
                <div class="main-tab-content" data-tab="2">
                    <div class="alertss"></div>
                    <form method="POST" action="/register" id="subset_from">
                        <div class="form-inps">
                            <i class="fas fa-user-alt"></i>
                            <input type="text" placeholder="نام  خود را وارد کنید" name="name" id="name">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-user-alt"></i>
                            <input type="text" placeholder="نام خانوادگی خود را وارد کنید" name="familyname" id="fname">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-users"></i>
                            <input type="text" placeholder="گروه خود را وارد کنید" name="group_name" id="gname">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-users"></i>
                            <select class="select2" name="senior_id" id="senior_id">
                                ‌<option value="">ادمین ارشد خود را انتخاب کنید</option>
                                <% seniors.forEach(s_user =>{   %>
                                <option value="<%= s_user.id  %> "><%= s_user.name  %></option>
                                <%})%>
                            </select>
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-user-alt"></i>
                            <input type="text" placeholder="نام کاربری خود را وارد کنید" name="username" id="username">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-phone-alt"></i>
                            <input type="text" placeholder="موبایل خود را وارد کنید" name="phonenumber" id="phone">
                        </div>
                        <div class="form-inps">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="پسورد خود را وارد کنید" name="password" id="password">
                        </div>



                        <button type="submit" id="reds" class="login-btn">ثبت نام</button>
                    </form>
                </div>

            </div>



            <div class="forgoten-password">
                <a href="/login" class="register-btn">حساب کاربری دارم</a>
            </div>

        </div>
    </div>








    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="js/plugins/select2.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="js/plugins/form-select2.js"></script>
    <script src="/js/tabs.js"></script>
</body>

</html>